@using Microsoft.AspNetCore.Identity
@using Microsoft.DotNet.Scaffolding.Shared.Project
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Applikasjon Roller";
}
    
<h1 class="custom-hover text-center" style="">Rolleoversikt</h1>

    <a asp-action="Create" class="btn btn-primary mb-2">Lag Rolle</a>


<table class="table table-bordered border-dark bg-opacity-75 bg-white">
    <thead class="table-dark">
        <tr>
            <th style="width: 50%">@Html.DisplayNameFor(model => model.Id)</th>

            <th style="width: 50%">Rollenavn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>

            </tr>
        }
    </tbody>
</table>