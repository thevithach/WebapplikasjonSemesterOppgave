@{
    ViewData["Title"] = "Rapport";
}
<h1 class="text-white">@ViewData["Title"]</h1>
<meta name="viewport" content="width=device-width"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.min.js"></script>


    <div class="bg-opacity-75 bg-white"id="chart-container" style="width: 60%; height: 30%; float:center;">
        <canvas id="raportArbeid"></canvas>
    </div>

    <script>
        var ctx = document.getElementById('raportArbeid').getContext('2d');

        var data = {
        labels: ["Forvent A.T.", "Utførte A.T.", "Gjennomsnitts utført A.T.", "Gjennomsnitt Forventet A.T. "],
            datasets: [{
                label: "Arbeids Raport:",
                data: [25, 20, 30, 40],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 3
            }]
        };

        var raportArbeid = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        // Resize the chart to fit the container div
        function resizeChart() {
            var chartContainer = document.getElementById('chart-container');
            var width = chartContainer.clientWidth;
            var height = chartContainer.clientHeight;

            raportArbeid.canvas.width = width;
            raportArbeid.canvas.height = height;
            raportArbeid.resize();
        }

        // Add an event listener to resize the chart when the window is resized
        window.addEventListener('resize', resizeChart);

        // Resize the chart initially
        resizeChart();
    </script>

