@model WebapplikasjonSemesterOppgave.Models.UserWithRoleView

@{
    ViewData["Title"] = "Edit User";
}

<div class="container bg-white bg-opacity-75">
    <h1>Edit User</h1>

    <form asp-action="Edit">
        <input type="hidden" asp-for="User.Id"/>
        <div class="form-group">
            <label asp-for="User.FirstName" class="control-label"><h5>Fornavn</h5></label>
            <input asp-for="User.FirstName" class="form-control"/>
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.LastName" class="control-label"><h5>Etternavn</h5></label>
            <input asp-for="User.LastName" class="form-control"/>
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User.Email" class="control-label"><h5>Email</h5></label>
            <input asp-for="User.Email" class="form-control"/>
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedRole" class="control-label"><h5>Rolle</h5></label>
            <select asp-for="SelectedRole" class="form-control">
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role.Name">@role.Name</option>
                }
            </select>
            <span asp-validation-for="SelectedRole" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Save" class="btn btn-primary mb-2"/>
        </div>
    </form>
</div>