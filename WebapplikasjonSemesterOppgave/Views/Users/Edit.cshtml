@model UserWithRoleVM

@{
    ViewData["Title"] = "Edit User";
}
<div class="row justify-content-center mt-5">
    <h1 class="custom-hover text-center">Administrasjon</h1>
    <div class="col-md-6 bg-white bg-opacity-75 border border-2 rounded">
        <h1>Endre Bruker</h1>
        <div asp-validation-summary="All"></div>
        <form asp-action="Edit">
            <input type="hidden" asp-for="User.Id"/>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"><h5>Fornavn</h5></label>
                <input asp-for="User.FirstName" class="form-control"/>
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"><h5>Etternavn</h5></label>
                <input asp-for="User.LastName" class="form-control"/>
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address" class="control-label"><h5>Adresse</h5></label>
                <input asp-for="User.Address" class="form-control"/>
                <span asp-validation-for="User.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"><h5>Email</h5></label>
                <input asp-for="User.Email" class="form-control"/>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"><h5>Rolle</h5></label>
                <select asp-for="SelectedRole" class="form-control">
                    @foreach (var role in Model.AllRoles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary mb-2"/>
            </div>
        </form>
    </div>
</div>


