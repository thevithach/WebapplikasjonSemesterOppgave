<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebapplikasjonSemesterOppgave</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebapplikasjonSemesterOppgave.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesheet.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <header>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand custom-hover" asp-area="" asp-controller="Home" asp-action="Index">
                Nøsted&
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link custom-hover" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-hover" asp-area="" asp-controller="Users" asp-action="Index">Brukere</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-hover" asp-area="" asp-controller="Home" asp-action="Form">Service Order</a>
                        </li>
                        <li>
                        <a class="nav-link custom-hover" asp-area="" asp-controller="AppRoles" asp-action="Index">Roller</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Raport" asp-action="Index">Raport</a>
                        </li>
                    </ul>
                    <partial name="_Loginpartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container custom-hover">
            &copy; 2023 - Nøsted& - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>setTimeout('window.location.href = window.location.href', 150000);</script>
</body>
</html>
